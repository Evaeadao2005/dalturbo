        // Função para copiar texto
        function copyText(button) {
            const text = button.previousElementSibling.textContent;
            navigator.clipboard.writeText(text).then(() => {
                button.textContent = 'Copiado!';
                button.style.background = '#25D366';
                setTimeout(() => {
                    button.textContent = 'Copiar';
                    button.style.background = 'var(--preto)';
                }, 2000);
            });
        }

        // Função para contador regressivo
        function startCountdown() {
            const countdownElement = document.getElementById('countdown');
            let timeLeft = 12 * 60 * 60; // 12 horas em segundos
            
            const timer = setInterval(() => {
                const hours = Math.floor(timeLeft / 3600);
                const minutes = Math.floor((timeLeft % 3600) / 60);
                const seconds = timeLeft % 60;
                
                countdownElement.textContent = `Seu teste expira em: ${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                
                if (timeLeft <= 0) {
                    clearInterval(timer);
                    countdownElement.textContent = "Seu teste expirou!";
                    countdownElement.style.color = "#E30613";
                } else {
                    timeLeft--;
                }
            }, 1000);
        }

        // Gerar teste automaticamente ao carregar a página
        window.addEventListener('DOMContentLoaded', generateTest);
    </script>
</body>
</html>
