        // Função para gerar o teste
        function generateTest() {
            // Mostrar carregamento
            document.getElementById('loading').classList.remove('hidden');
            document.getElementById('error').classList.add('hidden');
            document.getElementById('success').classList.add('hidden');
            
            // Simular um tempo de carregamento para demonstração
            setTimeout(() => {
                // Buscar dados
                fetch('https://painel.daltv.top/api/chatbot/rlKWO3Wzo7/kg5164DjlQ', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => {
                    if (!response.ok) throw new Error('Erro ao gerar acesso');
                    return response.json();
                })
                .then(data => {
                    document.getElementById('loading').classList.add('hidden');
                    showSuccess(data);
                })
                .catch(error => {
                    document.getElementById('loading').classList.add('hidden');
                    showError();
                    console.error('Erro:', error);
                });
            }, 1500); // Apenas para demonstração - remover em produção
        }

        // Mostrar mensagem de erro personalizada
